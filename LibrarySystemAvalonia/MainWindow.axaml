<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="LibrarySystemAvalonia.MainWindow"
        Title="Library System">

    <Grid RowDefinitions="Auto, *, Auto, Auto" Margin="10">
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
            <TextBox Name="TxtSearch" Watermark="Search Title..." Width="200"/>
            <Button Name="BtnSearch" Content="Search"/>
            <Button Name="BtnReset" Content="Reset"/>
            <Button Name="BtnBorrow" Content="Borrow Book" Background="LightGreen"/>
            <Button Name="BtnReturn" Content="Return Book" Background="LightSalmon"/>
            <Button Name="BtnSave" Content="Save"/>
            <Button Name="BtnLoad" Content="Load"/>
        </StackPanel>

        <DataGrid Name="BooksDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="*"/>
                <DataGridTextColumn Header="Year" Binding="{Binding Year}"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" FontWeight="Bold"/>
                <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,5">
            <TextBlock Text="New Book:" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox Name="InputId" Watermark="ID" Width="50"/>
            <TextBox Name="InputTitle" Watermark="Title" Width="150"/>
            <TextBox Name="InputAuthor" Watermark="Author" Width="150"/>
            <TextBox Name="InputYear" Watermark="Year" Width="60"/>
            <Button Name="BtnAdd" Content="Add New Book"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="10" Margin="0,5">
            <Button Name="BtnAddCopies" Content="Add Copies of Existing Book" Background="LightBlue" HorizontalAlignment="Stretch"/>
        </StackPanel>

    </Grid>
</Window>