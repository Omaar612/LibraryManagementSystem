<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LibrarySystemAvalonia.MainWindow"
        Title="Library Management System"
        Width="1000" Height="600">

    <DockPanel LastChildFill="True">
        
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10" Background="#f0f0f0">
            <Button x:Name="BtnSave" Content="Save Data" Background="LightBlue"/>
            <Button x:Name="BtnLoad" Content="Load Data" Background="LightGreen"/>
            
            <TextBlock Text="|" VerticalAlignment="Center" Margin="10,0"/>
            
            <TextBox x:Name="TxtSearch" Watermark="Search by Title..." Width="200"/>
            <Button x:Name="BtnSearch" Content="Search"/>
            <Button x:Name="BtnReset" Content="Reset/Show All"/>
        </StackPanel>

        <StackPanel DockPanel.Dock="Right" Width="250" Spacing="15" Margin="10" Background="#eeeeee">
            
            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="5">
                <StackPanel Spacing="10">
                    <TextBlock Text="Selected Book Actions" FontWeight="Bold"/>
                    <Button x:Name="BtnBorrow" Content="Borrow Selected" HorizontalAlignment="Stretch"/>
                    <Button x:Name="BtnReturn" Content="Return Selected" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="5">
                <StackPanel Spacing="10">
                    <TextBlock Text="Add New Book" FontWeight="Bold"/>
                    <TextBox x:Name="InputId" Watermark="ID (e.g., 101)" />
                    <TextBox x:Name="InputTitle" Watermark="Title" />
                    <TextBox x:Name="InputAuthor" Watermark="Author" />
                    <TextBox x:Name="InputYear" Watermark="Year" />
                    <Button x:Name="BtnAdd" Content="Add Book" HorizontalAlignment="Stretch" Background="Orange"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <DataGrid x:Name="BooksDataGrid" AutoGenerateColumns="True" IsReadOnly="True" Margin="10"/>
        
    </DockPanel>
</Window>